<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/material_blue_grey_950"
    tools:context=".MainActivity"
    android:clickable="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缺曠課紀錄"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:drawableTop="@drawable/ic_list_white_48px"
        android:background="#3E4344"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="個人資料"
        android:textColor="#ffffff"
        android:id="@+id/button2"
        android:drawableTop="@drawable/ic_account_circle_white_48px"
        android:background="#3E4344"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="nfc"
        android:textColor="#ffffff"
        android:id="@+id/button3"
        android:drawableTop="@drawable/ic_nfc_white_48px"
        android:background="#3E4344"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="登出系統"
        android:textColor="#ffffff"
        android:id="@+id/button5"
        android:drawableTop="@drawable/ic_exit_to_app_white_48px"
        android:background="#3E4344"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="點名"
        android:textColor="#ffffff"
        android:id="@+id/button4"
        android:drawableTop="@drawable/ic_done_white_48px"
        android:background="#3E4344"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="課表"
        android:textColor="#ffffff"
        android:id="@+id/button6"
        android:drawableTop="@drawable/ic_library_books_white_48px"
        android:background="#3E4344"
        android:layout_gravity="left|bottom"
        android:layout_alignTop="@+id/button5"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/scrollView" >

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView"
            android:layout_alignParentTop="true"
            android:unfocusedMonthDateColor="#ffffff"
            android:background="#ffffff"
            android:layout_toStartOf="@+id/button3"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3" />
    </ScrollView>


</RelativeLayout>
